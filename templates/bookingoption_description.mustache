{{!
    @template mod_booking/bookingoption_description

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}
{{#booknowbutton}}
    <div class="float-right">
        <div>
            {{{.}}}
        </div>
    </div>
{{/booknowbutton}}
<h4>{{title}}</h4>
{{#location}}<div class="bo_location">{{#str}}location, mod_booking{{/str}}: {{.}}</div>{{/location}}
{{#institution}}<div class="bo_institution">{{#str}}institution, mod_booking{{/str}}: {{.}}</div>{{/institution}}
{{#address}}<div class="bo_address">{{#str}}address, mod_booking{{/str}}:  {{.}}</div>{{/address}}
{{#statusdescription}}<div class="bo_description"><p>{{{.}}}</p></div>{{/statusdescription}}
{{#description}}<div class="bo_description"><p>{{{.}}}</p></div>{{/description}}
<div {{^teachers}} style="display:none"{{/teachers}}>
    {{#str}}teachers, mod_booking{{/str}}:
    <ul>
        {{#teachers}}
            <li>
                {{.}}
            </li>
        {{/teachers}}
    </ul>
</div>
<div class="list-group">
    {{#dates}}
        <div class="list-group-item">
            <div>
                <b>{{{datestring}}}</b>
            </div>
            <div {{^customfields}}style="display:none"{{/customfields}}>
                <ul>
                    {{#customfields}}
                        <li>
                            {{name}}{{{value}}}
                        </li>
                    {{/customfields}}
                </ul>
            </div>
        </div>
    {{/dates}}
</div>