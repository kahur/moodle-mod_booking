{{!
    @template mod_booking/bookingoption_description_mail

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<h4>{{title}}</h4>
{{#location}}{{#str}}location, mod_booking{{/str}}: {{.}}{{/location}}
{{#institution}}{{#str}}institution, mod_booking{{/str}}: {{.}}{{/institution}}
{{#address}}{{#str}}address, mod_booking{{/str}}:  {{.}}{{/address}}
{{#statusdescription}}<p>{{{.}}}</p>{{/statusdescription}}
{{#description}}<p>{{{.}}}</p>{{/description}}
<div {{^teachers}} style="display:none"{{/teachers}}>
    {{#str}}teachers, mod_booking{{/str}}:
    <ul>
        {{#teachers}}
            <li>
                {{.}}
            </li>
        {{/teachers}}
    </ul>
</div>
<ul>
    {{#dates}}
        <li><b>{{{datestring}}}</b></li>
        <ul>
            {{#customfields}}
                <li>
                    {{name}}{{{value}}}
                </li>
            {{/customfields}}
        </ul>
    {{/dates}}
</ul><br>
{{#booknowbutton}}{{{.}}}{{/booknowbutton}}